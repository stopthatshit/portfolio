---
import Build from "~/components/Build.astro";
import "~/styles/ibm-plex.css";
import "~/styles/global.css";
import Clock from "~/components/react/Clock";

interface Props {
    title?: string;
}

const { title } = Astro.props;
const displayTitle = title ? `${title} | stoppedas.xyz` : "stoppedas.xyz";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta
            name="description"
            content="stoppedas.xyz personal portfolio website"
        />
        <title>{displayTitle}</title>
        <link rel="icon" type="image/png" href="/favicon.png" />
    </head>
    <body class="min-h-screen text-gray-300">
        <slot />
        <Build />
        <Clock client:idle />
    </body>
</html>
