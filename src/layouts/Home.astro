---
import Footer from "~/components/Footer.astro";
import Separator from "~/components/Separator.astro";
import TopNav from "~/components/TopNav.astro";
import Base from "./Base.astro";

interface Props {
    title?: string;
    containerClass?: string;
}

const { title, containerClass } = Astro.props;
---

<Base title={title}>
    <div class="mx-auto flex max-w-[600px] flex-col px-4">
        <div class="flex flex-col justify-center gap-8 rounded-b-lg px-6 py-4">
            <TopNav />
            <main
                class:list={[
                    "mt-8 flex flex-col items-start gap-10 text-left text-base font-thin text-balance",
                    containerClass,
                ]}
            >
                <slot />
            </main>
        </div>
        <div class="flex flex-col">
            <Separator />
            <Footer />
        </div>
    </div>
</Base>
